<mujoco model="hopper">
  <worldbody>
    <body name="torso" pos="0 0 1.25">
      <joint name="rootx" type="slide" axis="1 0 0"/>
      <joint name="rootz" type="slide" axis="0 0 1"/>
      <joint name="rooty" type="hinge" axis="0 1 0"/>

      <geom name="torso_geom" type="capsule"/>

      <body name="thigh">
        <joint name="hip" type="hinge" axis="0 1 0"/>
        <geom type="capsule"/>

        <body name="leg">
          <joint name="knee" type="hinge" axis="0 1 0"/>
          <geom type="capsule"/>

          <body name="foot">
            <joint name="ankle" type="hinge" axis="0 1 0"/>
            <geom type="capsule"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor joint="hip"/>
    <motor joint="knee"/>
    <motor joint="ankle"/>
  </actuator>
</mujoco>
